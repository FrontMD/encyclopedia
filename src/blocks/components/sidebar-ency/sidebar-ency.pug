			a.sidebar-ency__link(href="javascript:void(0)") З
			a.sidebar-ency__link(href="javascript:void(0)") И
			a.sidebar-ency__link(href="javascript:void(0)") К
			a.sidebar-ency__link(href="javascript:void(0)") Л
			- if(checkProps.hasActive == true)
				.sidebar-ency__link.active М
			- else
				a.sidebar-ency__link(href="javascript:void(0)") М 
			a.sidebar-ency__link(href="javascript:void(0)") Н
