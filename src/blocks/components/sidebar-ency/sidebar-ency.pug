-
	const defaultSidebarEncyProps = {
		classes: '',
		hasActive: false
	}

mixin sidebar-ency(props = defaultSidebarEncyProps)
	-
		const checkProps = {
			classes: props.classes ? props.classes : defaultSidebarEncyProps.classes,
			hasActive: props.hasActive ? props.hasActive : defaultSidebarEncyProps.hasActive,
		}

	.sidebar-ency(class=checkProps.classes)&attributes(attributes)
		+title({
			tag: 'p',
			text: 'Категории',
			size: '20'
		})

		.sidebar-ency__links
			a.sidebar-ency__link(href="javascript:void(0)") А
			a.sidebar-ency__link(href="javascript:void(0)") Б
